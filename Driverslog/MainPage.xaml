                        <TextBlock x:Name="Amount" Text="{Binding AmountWithCurrency}" Style="{StaticResource PhoneTextSubtleStyle}" Foreground="{StaticResource AppLightAccentBrush}"/>
                    </StackPanel>
                </StackPanel>
